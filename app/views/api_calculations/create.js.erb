<% if @api_calculation.errors.present? %>
	  $("form").html("<%=j render 'form'%>");
<% else %>
  $(function(){
    $("form").prop("disabled", true);
    $("form input").prop("disabled", true);
    $("#submit-btn").prop("value", "Processing...");
  });
  
	$(".invalid-feedback").remove();
	$("input").removeClass("is-invalid");
<% end %>